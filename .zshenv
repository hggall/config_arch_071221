#Environment variables

alias p="paru"
alias nv="nvim"
alias snv="sudo nvim"
alias bm="bashmount"
#Alias for ls
alias ls="ls --color=auto"
alias la="ls -a"
alias ll="ls -la"
alias l.='ls -d .* --color=auto'
#Alias for cd
alias ..='cd ..'
alias ...='cd ../../'
alias ....='cd ../../../'
alias .4='cd ../../../../'
alias .5='cd ../../../../..'
#Alias for grep
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
